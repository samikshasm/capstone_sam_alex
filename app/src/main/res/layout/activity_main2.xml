<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context="com.samalex.slucapstone.Main2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/app_background_darker"
        android:minHeight="?attr/actionBarSize">


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:src="@drawable/white_logo"
        android:maxHeight="?attr/actionBarSize"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_top"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What TYPE OF ALCOHOL did you have?"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="13dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/wineBtn"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@color/app_background"
                    android:src="@drawable/new_wine_purple"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/beerBtn"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@color/app_background"
                    android:src="@drawable/beer_button_small_purple"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/liquorBtn"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@color/app_background"
                    android:src="@drawable/liquor_button_small_purple"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wineTxt"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="wine"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/beerTxt"
                    android:layout_width="105dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="beer"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/liquorTxt"
                    android:layout_width="105dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="liquor"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>


            <TextView
                android:id="@+id/size_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="13dp"
                android:text="What size was your ALCOHOLIC DRINK?"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/shot_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/shotBtn"/>
                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/eight_purple"
                        android:background="@color/app_background"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/eight"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/shotTxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="shot"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/eightTxt"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="8oz"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/sixteen_purple"
                        android:background="@color/app_background"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/sixteen"/>
                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/twenty_four_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:background="@color/app_background"
                        android:id="@+id/twentyFour"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/sixteenTxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="16oz"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/twentyFourTxt"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="24oz"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/number_drinks_qs"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="How many drinks do you plan on having?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/number_drinks_qs_layout"
                android:weightSum="5"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/drinks_subtract_button"
                    android:text="-"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@color/app_background_darker"
                    android:textColor="@color/pink"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/drinks_counter"
                    android:text="none"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/pink"
                    android:textSize="20sp"/>

                <Button
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/drinks_add_button"
                    android:text="+"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@color/app_background_darker"
                    android:textColor="@color/pink"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>


            </LinearLayout>


            <TextView
                android:id="@+id/who_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who were you drinking with?"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="13dp"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="25dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/alone_button_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/nobody" />

                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/couple_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/partner" />

                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/friends_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/friends" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/aloneTxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="alone"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/partnerTxt"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="partner"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/friendsTxt"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="friends"
                        android:gravity="center"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/other_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@color/app_background"
                        android:layout_weight="1"
                        android:id="@+id/other" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="other"
                        android:layout_weight="1"
                        android:id="@+id/otherTxt" />
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/people_qs"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="About how many people were you with?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people_qs_layout"
                android:weightSum="5"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/people_qs_subtract_button"
                    android:text="-"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@color/app_background_darker"
                    android:textColor="@color/pink"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/people_qs_counter"
                    android:text="none"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/pink"
                    android:textSize="20sp"/>

                <Button
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/people_qs_add_button"
                    android:text="+"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@color/app_background_darker"
                    android:textColor="@color/pink"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>


            </LinearLayout>
            <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

            <TextView
                android:id="@+id/where_text_view"
                android:text="Where were you drinking?"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/home_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:id="@+id/home"
                        android:layout_weight="1"/>


                    <ImageButton
                        android:id="@+id/work"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/work_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/bar"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/bar_purple"
                        android:background="@color/app_background"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/homeTxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="home"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/workTxt"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="work"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/barTxt"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="bar"
                        android:gravity="center"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@color/app_background"
                        android:src="@drawable/party_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:id="@+id/party" />


                    <ImageButton
                        android:id="@+id/otherPlace"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/other_purple"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@color/app_background"
                        android:layout_weight="1"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/partyTxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="party"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/otherTxt2"
                        android:layout_width="105dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="other"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/cost_qs"
                android:text="How much did your drink cost?"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:id="@+id/radioCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <RadioButton
                        android:id="@+id/radio_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:buttonTint="@color/green"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radio_1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:buttonTint="@color/purple"
                        android:text="$1.00-$5.00" />

                    <RadioButton
                        android:id="@+id/radio_6_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:buttonTint="@color/purple"
                        android:text="$6.00-$10.00" />
                    <RadioButton
                        android:id="@+id/radio_11_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:buttonTint="@color/purple"
                        android:text="$11.00-$15.00" />
                    <RadioButton
                        android:id="@+id/radio_16plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:buttonTint="@color/purple"
                        android:text="$16.00+" />

                </RadioGroup>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:layout_marginTop="25dp"
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="switchToMainActivty"
                android:text="SUBMIT"
                android:background="@color/light_blue"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="28dp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>