                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/app_background"
                        android:src="@drawable/yes_button"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"/>

                    <ImageButton
                        android:id="@+id/oral_no_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/app_background"
                        android:src="@drawable/no_button"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/oral_consent_qs"
                    android:paddingTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:text="Did you consent to oral sex?"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/oral_consent"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:weightSum="2">

                    <ImageButton
                        android:id="@+id/oral_consent_yes_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/app_background"
                        android:src="@drawable/yes_button"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
